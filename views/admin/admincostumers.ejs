<!DOCTYPE html>
<html>
  <head>
    <title>Ürünleri Yönet - Admin Paneli</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"
    />
  </head>
  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">Ana Sayfa</a>
          <button
            class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="#navbarNav"
            aria-controls="navbarNav"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/admin">Admin Paneli</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Çıkış Yap</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container mt-5">
      <h1 class="mb-4">Ürünleri Yönet - Admin Paneli</h1>

      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Ürün Listesi</h2>
        </div>
        <div class="card-body">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok Miktarı</th>
              </tr>
            </thead>
            <tbody>
              <% costumers.forEach(function(kullanicilar) { %>
                <form action="/costumersupdate" method="post">
                <tr>
                    <td>
                      <div class="field">
                        <div class="control">
                          <input class="input" id="name" type="text" name="username" value="<%= kullanicilar.usersname %>">
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="field">
                        <div class="control">
                          <input class="input" id="price" type="email" name="useremail" value="<%= kullanicilar.usersemail %>">
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="field">
                        <div class="control">
                          <input class="input" id="stock" type="tel" name="tel" value="<%= kullanicilar.tel %>">
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="field">
                        <div class="control">
                          <input class="input" id="stock" type="textbox" name="address" value="<%= kullanicilar.address %>"> 
                        </div>
                      </div>
                    </td>
                    <td>
                      <div class="field">
                        <div class="control">
                          <input type="hidden" value="<%=kullanicilar.id%>" name="productid"  class="button is-warning">
                          <input type="submit" value="Güncelle" id="buton" class="button is-warning">
                        </div>
                      </div>
                    </td>
                  </tr>
                  </form>
              <%})%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <footer class="mt-5 py-3 bg-dark text-white text-center">
      <p>Telif Hakkı &copy; 2023 Kuruyemişci Sitesi</p>
    </footer>
    <script src="../../js/database.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
